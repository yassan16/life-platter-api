# life_platter-api 環境変数テンプレート
# このファイルをコピーして .env.local または .env.production を作成してください
# cp .env.example .env.local

# === Database ===
# 同期接続用（必須）
DATABASE_URL=mysql+pymysql://user:password@db/life_platter_db
# 非同期接続用（オプション）
# ASYNC_DATABASE_URL=mysql+aiomysql://user:password@db/life_platter_db

# === Database (MySQL Container) ===
# MySQLコンテナの初期化に使用される環境変数
MYSQL_DATABASE=life_platter_db
MYSQL_USER=
MYSQL_PASSWORD=
MYSQL_ROOT_PASSWORD=

# === JWT ===
# 本番環境では必ず強力なランダム文字列を使用してください
# 生成例: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=

# === AWS/S3 ===
# 空の場合はスタブモードで動作（開発用）
S3_BUCKET_NAME=
AWS_REGION=ap-northeast-1
PRESIGNED_URL_EXPIRES=300
MAX_IMAGE_SIZE=10485760

# CloudFront（本番用）
CLOUDFRONT_DOMAIN=
